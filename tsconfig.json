{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@data/*": ["data/*"],
      "@utils/*": ["utils/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@playwright/test"]
  },
  "include": ["tests", "pages", "utils", "data", "playwright.config.ts"]
}
